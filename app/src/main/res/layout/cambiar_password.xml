<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:weightSum="4"
    android:background="@color/background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/logoconborde" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:weightSum="2"
        android:padding="60dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nuevaPassword1_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:background="#FFFFFF"
            android:text="Ingresar su nueva contraseÃ±a" />

        <EditText
            android:id="@+id/nuevaPassword2_et"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:background="#FFFFFF"
            android:layout_marginTop="20dp"
            android:text="Vuelva a ingresarla" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:padding="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/ingresar_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/titlebar_bg"
            android:text="@string/ingresar_texto"
            android:textColor="@color/background"/>

    </LinearLayout>

</LinearLayout>