<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".inicializacion.RegistroActivity">

    <include layout="@layout/default_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:weightSum="3.5"
            android:padding="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nombreUsuario_et"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:paddingLeft="5dp"
                android:background="#FFFFFF"
                android:hint="Nombre de Usuario" />

            <EditText
                android:id="@+id/password_et"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:background="#FFFFFF"
                android:inputType="textPassword"
                android:hint="Contraseña" />

            <EditText
                android:id="@+id/nombre_et"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:background="#FFFFFF"
                android:hint="Nombre Completo" />

            <EditText
                android:id="@+id/mail_et"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:background="#FFFFFF"
                android:inputType="textEmailAddress"
                android:hint="Correo Electrónico" />

            <EditText
                android:id="@+id/telefono_et"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:background="#FFFFFF"
                android:hint="Celular"
                android:maxLength="9"
                android:inputType="phone"/>

            <EditText
                android:id="@+id/cuentaRedPagos_et"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:background="#FFFFFF"
                android:inputType="number"
                android:hint="Cuenta de RedPagos" />

            <Spinner
                android:id="@+id/vehiculos_sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>

        </LinearLayout>

        <!--LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center_horizontal">

            <ImageButton
                android:id="@+id/camara_ibtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:layout_marginRight="150dp"
                android:layout_marginLeft="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/camara_icon"
                android:background="@color/background"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="Tomate una foto"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"/>

        </LinearLayout-->

        <Button
            android:id="@+id/registrarse_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/titlebar_bg"
            android:layout_margin="20dp"
            android:text="@string/registrarse_texto"
            android:textColor="@color/background"/>

    </LinearLayout>

</LinearLayout>